{
  "name": "react-node-starter",
  "version": "1.0.0",
  "description": "Nalda",
  "main": "server.js",
  "scripts": {
    "clear-hot-update": "find . -name '*.hot-update.json' -delete",
    "build": "webpack --config webpack.prod.config.js",
    "js-lint": "eslint server.js backend/**/*.js frontend/**/*.js",
    "sass-lint": "sass-lint -c .sass-lint.yml 'frontend/**/*.scss' -v -q",
    "lint": "yarn js-lint && yarn sass-lint",
    "dev": "source env.sh && concurrently 'yarn frontend' 'yarn backend'",
    "frontend": "webpack -d --watch",
    "backend": "nodemon server.js",
    "go": "nodemon --exec npm start",
    "start": "NODE_ENV=production node server.js",
    "test": "mocha --compilers js:babel-core/register ./test/**/*.js --require ignore-styles",
  },
  "author": "Adam Ripley, Cameron Cabo",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    },
  },
  "dependencies": {
    "@sendgrid/mail": "^6.2.1",
    "async": "^2.6.0",
    "autosize": "^4.0.0",
    "aws-sdk": "^2.192.0",
    "axios": "^0.17.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^6.4.1",
    "babel-preset-react": "^6.24.1",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.2",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^2.0.0",
    "cookie-parser": "^1.4.3",
    "css-loader": "^0.28.0",
    "exif-js": "^2.3.0",
    "express": "^4.15.2",
    "express-session": "^1.15.6",
    "google-map-react": "^0.26.0",
    "moment": "^2.20.1",
    "mongoose": "^4.13.2",
    "node-sass": "^4.5.2",
    "nodemailer": "^4.4.2",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-google-oauth20": "^1.0.0",
    "passport-local": "^1.0.0",
    "prop-types": "^15.6.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-dropzone": "^4.2.7",
    "react-helmet": "^5.2.0",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.2.2",
